# Portals (DocSync) - Environment Variables Template
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to Git!

# ============================================
# Notion Configuration
# ============================================
# Get your Notion API key from: https://www.notion.so/my-integrations
NOTION_API_KEY=secret_your_notion_api_key_here

# Portals team space ID (will be set during init)
NOTION_TEAMSPACE_ID=your_teamspace_id_here

# ============================================
# Google Workspace Configuration
# ============================================
# Your Google Workspace email
GOOGLE_WORKSPACE_EMAIL=your_email@gmail.com

# Google Workspace MCP server name (default: google-workspace)
GOOGLE_MCP_SERVER=google-workspace

# ============================================
# Obsidian Configuration (Optional)
# ============================================
# Path to your Obsidian vault
OBSIDIAN_VAULT_PATH=/path/to/your/obsidian/vault

# ============================================
# Application Configuration
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log output: human, json
LOG_FORMAT=human

# ============================================
# Development Settings (Optional)
# ============================================
# Enable debug mode
DEBUG=false

# Test mode (use test data)
TEST_MODE=false
